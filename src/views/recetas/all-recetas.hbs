<div class="card mt-3 mb-3">
    <img src="/iconos/bienvenida.jpg" class="rounded banner" alt="">
</div>

<div class="row mx-auto">
    {{#each receta}}
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title txt-centrado">
                    {{title}}
                </h4>
                <img src="{{imagenURL}}" class="img-fluid img-completa">
                <br><br>
                <h6 class="txt-centrado">
                    {{categoria}}
                </h6>
            </div>
            <a href="/recetas/ver/{{_id}}" class="btn btn-success">Ver</a>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto mt-5">
        <div class="card-body">
            <p class="lead">
                Aún no hay recetas en nuestro servidor.
            </p>
            <a href="/recetas/new" class="btn btn-success btn-block">Sé el primero en subir una!</a>
        </div>
    </div>
    {{/each}}
</div>