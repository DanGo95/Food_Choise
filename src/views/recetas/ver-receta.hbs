<div class="card" style="margin: 15px;">
    <div class="row tarjeta">
        <div class="col-md-12">
            <h4 class="text-success">{{receta.title}}</h4>
            <hr class="hr-cambio">
            <p><img class="foto-plato rounded" src="{{receta.imagenURL}}" alt=""></p>
            <h4 class="text-muted">Preparación</h4>
            <p>{{receta.descripcion}}</p>
            <hr class="hr-cambio">
            <h4 class="text-muted">Categoría</h4>
            <p>{{categRec.descripcion}}</p>
            <hr class="hr-cambio">
            <h4 class="text-muted">Ingredientes</h4>
            <div class="container">
                <div class="row d-flex justify-content-center">
                    {{#each receta.ingredientes}}
                    <div class="col-md-2 col-lg-2 mt-2 ml-2 custom-control custom-checkbox border rounded checkbox">
                        {{this}}
                    </div>

                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    {{#if_eq receta.owen user.id}}<!--Helper custom que hice para igualar dos parametros-->
        <div class="row botones">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmacion">
                Eliminar
            </button>

            <!-- Modal -->
            <div class="modal fade" id="confirmacion" tabindex="-1" role="dialog" aria-labelledby="modelTitleId"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <form class="modal-content" method="POST" action="/recetas/delete?_method=DELETE&id={{receta._id}}">
                        <div class="modal-header">
                            <h5 class="modal-title">Eliminar {{receta.title}}</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="container-fluid">
                                Está a punto de eliminar su receta "{{receta.title}}". ¿Está seguro?
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">SI</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>
                        </div>
                    </form>
                </div>
            </div>
            <script>
                $('#exampleModal').on('show.bs.modal', event => {
                    var button = $(event.relatedTarget);
                    var modal = $(this);
                });
            </script>
            <a href="/recetas/editar/{{receta._id}}" class="btn btn-info">Editar</a>

        </div>
    </div>
    {{/if_eq}}
</div>