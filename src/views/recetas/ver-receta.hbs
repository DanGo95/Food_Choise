<div class="card">
    <div class="col-md-12">
        <div class="col-md-8 mx-auto">
            <h4 class="text-success txt-centrado mt-3">{{receta.title}}</h4>
            <hr>
            <p><img class="foto-plato rounded" src="{{receta.imagenURL}}" alt=""></p>
            <h4 class="text-muted txt-centrado">Ingredientes</h4>
            <div class="container">
                <div class="row d-flex justify-content-center">
                    {{#each receta.ingredientes}}
                    <div class="col-md-2 col-lg-2 mt-2 ml-2 custom-control custom-checkbox border rounded checkbox">
                        {{this}}
                    </div>
                    {{/each}}
                </div>
            </div>
            <hr>
            <h4 class="text-muted txt-centrado">Preparación</h4>
            <p class="txt-centrado">{{receta.descripcion}}</p>
            <hr>
            <h4 class="text-muted txt-centrado">Categoría</h4>
            <p class="txt-centrado">{{categRec.descripcion}}</p>
            <hr>    
        </div>
    </div>
    {{#if_eq receta.owen user.id}}<!--Helper custom que hice para igualar dos parametros-->
        <div class="row botones">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmacion">
                Eliminar
            </button>
            <!-- Modal -->
            <div class="modal fade" id="confirmacion" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <form class="modal-content" method="POST" action="/recetas/delete?_method=DELETE&id={{receta._id}}">
                        <div class="d-block">
                            <h4 class="modal-title text-center">Eliminar {{receta.title}}</h4>
                        </div>
                        <hr>
                        <div class="modal-body">
                            <div class="container-fluid text-center">
                                Está a punto de eliminar su receta "{{receta.title}}". ¿Está seguro que desea eliminar la receta?
                            </div>
                        </div>
                        <hr>
                        <div class="text-center mx-auto">
                            <button type="submit" class="btn btn-primary">SI</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button>
                        </div>
                        <br>
                    </form>
                </div>
            </div>
            <script>
                $('#exampleModal').on('show.bs.modal', event => {
                    var button = $(event.relatedTarget);
                    var modal = $(this);
                });
            </script>
            <a href="/recetas/editar/{{receta._id}}" class="btn btn-info">Editar</a>

        </div>
    </div>
    {{/if_eq}}
