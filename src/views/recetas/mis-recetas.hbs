{{#each resultado}}
    <div class="row">
        <div class="col-lg-8 col-md-8 col-xl-12">
            <div class="card">
                <header>
                    <p>{{title}}</p>
                </header>
                <section>
                    <div class="container" >
                        <img src="{{imagenURL}}" alt="" class="img-fluid">
                    </div>
                </section>
                <section>
                    <pre>{{descripcion}}</pre>
                </section>
            </div>
        </div>
    </div>
    {{else}}
    <div class="row">
        <div class="col-lg-8 col-md-8 col-xl-12">
            <div class="card">
                <pre>
                    No has escrito ninguna receta :( 
                    <button class="btn btn-prumary"><a href="/recetas/new-receta"></a></button>
                </pre>
            </div>
        </div>
    </div>
{{/each}}
