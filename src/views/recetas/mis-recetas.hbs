            <h4>{{title}}</h4>
            <p>{{descripcion}}</p>
        </div>
        <div class="botones col-xs-2 col-sm-2 col-md-2 col-lg-2">
            <a href="/recetas/ver/{{_id}}" class="btn btn-success btn-lg">Ver</a>
        </div>
    </div>
</div>
<br>
