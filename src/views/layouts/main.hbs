    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
    <script src="../../public/js/main.js"></script>
    <title>Food Choice</title>
</head>

<body>
    
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" id="navId">
        <li class="nav-item">
            <a href="#tab1Id" class="nav-link active">Recetas</a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true"
                aria-expanded="false">Perfil</a>
            <div class="dropdown-menu">
                <a class="dropdown-item" href="#tab2Id">Mis Recetas</a>
                <a class="dropdown-item" href="#tab3Id">Favoritos</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#tab4Id">Mi perfil</a>
            </div>
        </li>
        <li class="nav-item">
            <a href="#tab5Id" class="nav-link">Publicar receta</a>
        </li>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Buscar recetas...">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar recetas</button>
        </form>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane fade show active" id="tab1Id" role="tabpanel">Recetas (general)</div>
        <div class="tab-pane fade" id="tab2Id" role="tabpanel">Recetas del Usuario</div>
        <div class="tab-pane fade" id="tab3Id" role="tabpanel">Favoritos</div>
        <div class="tab-pane fade" id="tab4Id" role="tabpanel">Perfil del usuario</div>
        <div class="tab-pane fade" id="tab5Id" role="tabpanel">Publicar receta (formulario)</div>
    </div>

    <main class="container">
        {{> errors }}  <!-- El main recorre en busca de errores en caso de que los alla (faltan datos, longitud demasiado corta, etc) -->

        {{{ body }}}
    </main>
</body>

</html>